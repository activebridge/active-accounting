<ng-include src="'<%= asset_path('angular/shared/header.html.erb') %>'"></ng-include>
<div class="counterparties">
  {{ 'counterparties' | translate }}
  <div class="ctrl">
    <div class="form">
      <form ng-submit="add()">
        <table>
          <tr>
            <th translate='name'></th>
            <th translate='date'></th>
            <th translate='type'></th>
            <th></th>
          </tr>
          <tr>
            <td>
              <input ng-model="newCounterparty.name" type="text"></input>
              <br> <span class='error'>{{newCounterparty.errors.name[0]}}</span>
            </td>
            <td>
              <input ng-model='newCounterparty.start_date' type='text' id='start_date'></input>
            </td>
            <td>
              <div class="select-types">
                <select class="сounterparty-types" ng-model="newCounterparty.type">
                  <option ng-repeat="type in types" value='{{type.value}}' translate='{{type.text}}' ng-init='conversionSelect($last)'></option>
                </select>
                <br> <span class='error'>{{newCounterparty.errors.type[0]}}</span>
              </div>
            </td>
            <td><button class="btn" type="submit" translate='NewArticle'></button></td>
          </tr>
        </table>
      </form>
    </div>

    <a ng-click="showMonthlyPayment = !showMonthlyPayment" href="" class="show_monthly_payment">
      {{ 'monthly_payment' | translate }}
      <span ng-show='!showMonthlyPayment'>({{ 'show' | translate }})</span>
      <span ng-show=' showMonthlyPayment'>({{ 'hide' | translate }})</span>
    </a>
    <ul class="nav nav-tabs">
      <li ng-class="{'active': showGroup == 'Customer'}"><a href="" ng-click="changeGroup('Customer')" translate='Customers'></a></li>
      <li ng-class="{'active': showGroup == 'Vendor'}"><a href="" ng-click="changeGroup('Vendor')" translate='Vendors'></a></li>
      <li ng-class="{'active': showGroup == 'Other'}"><a href="" ng-click="changeGroup('Other')" translate='Others'></a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane" ng-class="{'active': showGroup == 'Customer'}">
        <ng-include src="'<%= asset_path('angular/shared/_conterpaties.html.erb') %>'"></ng-include>
      </div>
      <div class="tab-pane" ng-class="{'active': showGroup == 'Vendor'}">
        <ng-include src="'<%= asset_path('angular/shared/_conterpaties.html.erb') %>'"></ng-include>
      </div>
      <div class="tab-pane" ng-class="{'active': showGroup == 'Other'}">
        <ng-include src="'<%= asset_path('angular/shared/_conterpaties.html.erb') %>'"></ng-include>
      </div>
    </div>
  </div>
</div>
