= render partial: 'shared/navbar'
.ctrl{'ng-controller' => 'CounterpartiesCtrl'}
  .form
    %form{'ng-submit' => 'add()'}
      %input{'type' => 'text', 'ng-model' => 'newCounterparty.name'}
      %button{type: 'submit'}
        Додати

  .list
    %ul{'ng-repeat' => 'counterparty in counterparties'}
      %li
        %span.name{'editable-text' => 'counterparty.name', 'onbeforesave' => 'update(counterparty.id, $data)'}
          {{ counterparty.name }}
        |
        %a.delete{'href' => 'javascript: void(false);', 'ng-click' => 'delete(counterparty.id)'}
          Видалити
